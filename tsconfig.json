{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es5"],

    "rootDir": "./src",
    "outDir": "./dist",

    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,

    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "src/Deferred.spec.ts",
    "dist/**/*"
  ]
}
